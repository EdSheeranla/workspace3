<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hjy.shop.entity.Product">
        <id name="pid">
            <generator class="increment"/>
        </id>
        <property name="image"/>
        <property name="pname"/>
        <property name="market_price"/>
        <property name="shop_price"/>
        <property name="pdate"/>
        <property name="is_hot"/>
        <property name="pdesc" column="pdesc"/>
        <many-to-one name="categorySecond" foreign-key="csid" class="com.hjy.shop.entity.CategorySecond" lazy="false"/>
    </class>
</hibernate-mapping>
